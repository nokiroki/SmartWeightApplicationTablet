<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="10dp">

        <TextView
            android:id="@+id/final_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textSize="32sp"
            android:gravity="center_vertical"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/final_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/position"
            android:textSize="32sp"
            android:gravity="center_vertical"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/final_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:textSize="32sp"
            android:gravity="center_vertical"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/final_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time"
            android:textSize="32sp"
            android:gravity="center_vertical"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/final_dish_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dish"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:textSize="48sp"/>

            <TextView
                android:id="@+id/final_current_mass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weight_current"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:textSize="48sp"/>

            <TextView
                android:id="@+id/final_mass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weight_require"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:textSize="48sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/final_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginVertical="50dp"
            android:text="@string/rating"
            android:textSize="64sp"/>

        <TextView
            android:id="@+id/final_rating_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/problem"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:textSize="48sp"
            android:gravity="end"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|end"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/database_info"
            android:textSize="24sp"/>

    </LinearLayout>

</LinearLayout>